{
  "name": "map-stack",
  "private": true,
  "scripts": {
    "build": "turbo run build --filter=backend --filter=web",
    "dev": "turbo run dev --parallel --filter=web --filter=backend",
    "dev:backend": "turbo run dev --filter=backend",
    "dev:web": "turbo run dev --filter=web",
    "lint": "turbo run lint --filter=backend --filter=web",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "@types/node": "^24.9.2",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "turbo": "^2.5.8",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
